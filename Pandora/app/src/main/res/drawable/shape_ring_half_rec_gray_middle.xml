<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:endColor="@color/line_gray"
                android:startColor="@color/line_gray" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@android:color/white" />

            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

</layer-list>



