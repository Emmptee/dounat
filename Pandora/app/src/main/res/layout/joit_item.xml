<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="260px"
    >

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
    <ImageView
        android:id="@+id/joint_video_img"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        />
    <ImageView
        android:id="@+id/dian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/d1"
        android:layout_toRightOf="@id/joint_video_img"
        android:layout_marginLeft="26px"
        android:layout_marginTop="110px"

        />
    <TextView
        android:id="@+id/joint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:textSize="24px"
        android:layout_below="@id/joint_video_img"
        android:layout_marginTop="10px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    </com.bis.android.plug.autolayout.AutoRelativeLayout>
</com.bis.android.plug.autolayout.AutoRelativeLayout>
