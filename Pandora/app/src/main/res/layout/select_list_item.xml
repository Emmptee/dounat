<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        >
        <ImageView
            android:id="@+id/select_item_uimg"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginLeft="30px"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bf"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            />
        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/select_item_uimg"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_marginRight="62px"
            >
        <TextView
            android:id="@+id/select_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#000000"
            android:textSize="30px"

            />
        <TextView
            android:id="@+id/make_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:text="制作次数"
            android:textColor="#BBBBBB"
            android:layout_below="@id/select_item_title"
            android:layout_marginTop="12px"
            />
        <ImageView
            android:id="@+id/user_img"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginTop="14px"
            android:layout_below="@id/make_count"
            />
         <TextView
             android:id="@+id/uset_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="明星Name"
             android:textSize="28px"
             android:textColor="#F5CC23"
             android:layout_marginLeft="14px"
             android:layout_marginTop="12px"
             android:layout_toRightOf="@id/user_img"
             android:layout_below="@id/make_count"
             />
        </com.bis.android.plug.autolayout.AutoRelativeLayout>
        <ImageView
            android:id="@+id/select_item_type"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38px"
            />
    </com.bis.android.plug.autolayout.AutoRelativeLayout>
</com.bis.android.plug.autolayout.AutoRelativeLayout>
