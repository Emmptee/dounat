<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="com.donut.app.mvp.home.SweetWheatCirclesFragment" />

    </data>

<com.bis.android.plug.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/head_title_color"
        >
      <ImageButton
          android:id="@+id/home_left_img"
          android:layout_width="100px"
          android:layout_height="match_parent"
          android:src="@drawable/home_cd"
          android:scaleType="centerInside"
          android:background="@null"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="34px"
            android:layout_centerVertical="true"
            />
     <ImageView
         android:id="@+id/home_sousuo"
         android:layout_width="100px"
         android:layout_height="match_parent"
         android:src="@drawable/sousuo"
         android:layout_alignParentRight="true"
         android:scaleType="centerInside"
         android:layout_centerVertical="true"
         />

    </com.bis.android.plug.autolayout.AutoRelativeLayout>
       <android.support.v7.widget.RecyclerView
           android:id="@+id/home_recy"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/title"
           >
       </android.support.v7.widget.RecyclerView>
</com.bis.android.plug.autolayout.AutoRelativeLayout>
</layout>