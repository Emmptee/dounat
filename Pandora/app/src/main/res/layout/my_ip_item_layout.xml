<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px_10"
    android:paddingLeft="@dimen/px_10"
    android:paddingRight="@dimen/px_10">

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shang"
        android:orientation="vertical"
        android:padding="@dimen/px_10">

        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/my_ip_item_img"
                android:layout_width="match_parent"
                android:layout_height="388px"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/play_icon"/>

            <TextView
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/px_20"
                android:background="@drawable/shape_half_rec_main"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="@dimen/px_15"
                android:paddingRight="@dimen/px_15"
                android:paddingTop="@dimen/px_10"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/text_third_font_size"/>
        </com.bis.android.plug.autolayout.AutoRelativeLayout>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10">

            <TextView
                android:id="@+id/my_ip_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我是标题"
                android:textColor="@color/text_gray3"
                android:textSize="@dimen/px_30"/>

            <TextView
                android:id="@+id/my_ip_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1分钟前"
                android:textColor="@color/text_gray9"
                android:textSize="24px"/>
        </com.bis.android.plug.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/my_ip_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/px_5"
            android:maxLines="4"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:textColor="@color/text_gray9"
            android:textSize="24px"/>

        <TextView
            android:id="@+id/my_ip_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/px_20"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/px_5"
            android:maxLines="4"
            android:paddingBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:paddingTop="@dimen/px_20"
            android:text="心愿详情"
            android:textColor="@color/colorPrimary"
            android:textSize="24px"/>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ip_content_left_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:text="邀请明星"
                android:textColor="@color/colorPrimary"
                android:textSize="30px"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ip_content_right_line"/>

        </com.bis.android.plug.autolayout.AutoLinearLayout>

        <LinearLayout
            android:id="@+id/my_ip_star_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:paddingTop="@dimen/px_20">

        </LinearLayout>

    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_zhong"/>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_xia"
        android:gravity="center"
        android:orientation="vertical">

        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_gray9"
                android:textSize="28px"
                />

            <TextView
                android:id="@+id/my_ip_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_toRightOf="@id/review_status"
                android:background="@drawable/shape_half_rec_main"
                android:paddingBottom="8px"
                android:paddingLeft="@dimen/px_15"
                android:paddingRight="@dimen/px_15"
                android:paddingTop="8px"
                android:text="更新信息"
                android:textColor="@color/white"
                android:textSize="28px"
                />
        </com.bis.android.plug.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/refused_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lineSpacingExtra="@dimen/px_10"
            android:padding="@dimen/px_20"
            android:textColor="@color/text_gray9"
            android:textSize="24px"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

</com.bis.android.plug.autolayout.AutoLinearLayout>