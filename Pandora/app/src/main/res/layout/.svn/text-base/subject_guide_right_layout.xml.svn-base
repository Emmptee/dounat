<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_right_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2000000"
    android:visibility="gone"
    android:orientation="vertical">

    <TextView
        android:id="@+id/guide_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/guide_hand"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide_hand">

        <TextView
            android:id="@+id/guide_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/guide_comment"/>

        <TextView
            android:id="@+id/guide_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/guide_comment"
            android:layout_marginRight="30dp"
            android:background="@drawable/guide_arrow"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/guide_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/guide_know"/>

    <TextView
        android:id="@+id/guide_comment_total_num"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_60"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_20"
        android:background="@drawable/shape_half_rec_gray_comment"
        android:gravity="center"
        android:paddingBottom="8px"
        android:paddingLeft="@dimen/px_5"
        android:paddingRight="@dimen/px_5"
        android:paddingTop="8px"
        android:textColor="@color/colorPrimary"
        android:textSize="26px"/>
</com.bis.android.plug.autolayout.AutoRelativeLayout>
