<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px"
         android:layout_marginBottom="20px"
        >
        <ImageView
            android:id="@+id/com_img"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@drawable/icon_logo"
            android:layout_marginLeft="30px"

            />
        <TextView
            android:id="@+id/com_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_toRightOf="@id/com_img"
            android:layout_marginLeft="20px"
            android:textSize="32px"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/com_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:textSize="24px"
            android:textColor="#CCCCCC"
            android:text="时间"
            />
        <TextView
            android:id="@+id/com_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/com_img"
            android:layout_below="@id/com_name"
            android:textSize="30px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            />
    </com.bis.android.plug.autolayout.AutoRelativeLayout>

</com.bis.android.plug.autolayout.AutoRelativeLayout>
