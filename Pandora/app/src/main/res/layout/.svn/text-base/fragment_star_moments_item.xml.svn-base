<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/star_moment_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_20"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/text_tiffany"
        android:textSize="@dimen/text_third_font_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_lighter_f2" />

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px_20">

        <ImageView
            android:id="@+id/star_moment_iv_header"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:background="@drawable/star_head_bg"
            android:paddingBottom="2px"
            android:paddingLeft="2px"
            android:paddingRight="@dimen/px_8"
            android:paddingTop="6px" />

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_5"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_5"
            android:orientation="vertical">

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/star_moment_tv_starName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fdb436"
                    android:textSize="@dimen/text_second_font_size" />

                <TextView
                    android:id="@+id/star_moment_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/text_gray9"
                    android:textSize="@dimen/px_20" />
            </com.bis.android.plug.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/star_moment_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_15"
                android:textColor="@color/text_gray3"
                android:textSize="@dimen/text_first_font_size" />

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:id="@+id/star_moment_layout_recording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_15"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.bis.android.plug.autolayout.AutoLinearLayout
                    android:id="@+id/star_moment_layout_recording_play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/record_listen_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star_moment_recording_play_anim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px_25"
                        android:background="@drawable/voice_gray" />

                    <TextView
                        android:id="@+id/star_moment_recording_last_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/px_15"
                        android:textColor="@color/gray_lighter_b" />

                    <TextView
                        android:id="@+id/star_moment_recording_listen_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px_25"
                        android:textSize="24px"
                        android:textColor="@color/gray_lighter_b" />
                </com.bis.android.plug.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/star_moment_recording_listen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:background="@drawable/shape_half_round_main"
                    android:paddingBottom="@dimen/px_15"
                    android:paddingLeft="@dimen/px_25"
                    android:paddingRight="@dimen/px_25"
                    android:paddingTop="@dimen/px_15"
                    android:text="偷听"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </com.bis.android.plug.autolayout.AutoLinearLayout>

            <com.bis.android.plug.autolayout.AutoRelativeLayout
                android:id="@+id/star_moment_layout_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/gray_lighter_f2"
                android:padding="@dimen/px_15">

                <ImageView
                    android:id="@+id/star_moment_iv_subject_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:background="@color/text_gray9" />

                <TextView
                    android:id="@+id/star_moment_tv_subject_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_toRightOf="@id/star_moment_iv_subject_img"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_gray3"
                    android:textSize="@dimen/text_first_font_size" />

                <TextView
                    android:id="@+id/star_moment_tv_subject_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/star_moment_tv_subject_title"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginTop="@dimen/px_20"
                    android:layout_toRightOf="@id/star_moment_iv_subject_img"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_gray9"
                    android:textSize="@dimen/text_fourth_font_size" />

            </com.bis.android.plug.autolayout.AutoRelativeLayout>

        </com.bis.android.plug.autolayout.AutoLinearLayout>

    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_10"
        android:background="@color/gray_lighter_f2" />

</com.bis.android.plug.autolayout.AutoLinearLayout>
