<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/px_20"
    android:background="@color/white"
    android:orientation="horizontal">
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/collect_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_collect"
            android:textSize="22px"
            android:drawablePadding="@dimen/px_5"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/collect_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/text_gray6"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/collect"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/vote_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/vote_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_note"
            android:textSize="22px"
            android:drawablePadding="@dimen/px_5"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/vote_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/text_gray6"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/vote"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/voice_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/voice_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_voice"
            android:textSize="22px"
            android:drawablePadding="@dimen/px_5"
            android:gravity="center"
            android:textColor="@color/gold"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:layout_marginTop="@dimen/px_10"
            android:textColor="@color/text_gray6"
            android:text="@string/star_recoder"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/reward_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reward_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_reward"
            android:textSize="22px"
            android:drawablePadding="@dimen/px_5"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/text_gray6"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/reward"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>



    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/share_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/share_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_share"
            android:textSize="22px"
            android:drawablePadding="@dimen/px_5"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/text_gray6"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/share"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>


</com.bis.android.plug.autolayout.AutoLinearLayout>