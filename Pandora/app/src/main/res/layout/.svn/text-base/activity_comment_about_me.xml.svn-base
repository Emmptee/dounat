<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        android:id="@+id/top"
        layout="@layout/head_include"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/comment_me_srl"
        android:layout_width="match_parent"
        android:layout_below="@id/top"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_me_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/icon_cry"
        android:drawablePadding="@dimen/px_20"
        android:textColor="@color/text_gray9"
        android:text="对不起，还没有与你相关的评论哦！"
        android:textSize="@dimen/text_second_font_size"
        android:visibility="gone"/>
    <include
        android:visibility="gone"
        layout="@layout/comment_reply_bottom_layout"/>
</com.bis.android.plug.autolayout.AutoRelativeLayout>
