<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_lighter_f2"
    android:orientation="vertical">

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/order_item_tv_subjectName"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:maxEms="22"
            android:paddingLeft="20px"
            android:singleLine="true"
            android:textColor="@color/text_gray3"
            android:textSize="24px" />

        <TextView
            android:id="@+id/order_item_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="20px"
            android:textColor="@color/text_tiffany"
            android:textSize="24px" />

    </com.bis.android.plug.autolayout.AutoRelativeLayout>

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190px"
        android:background="#f5f5f5"
        android:padding="20px">

        <ImageView
            android:id="@+id/order_item_iv_thumbnail"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@color/bg_img_gray" />

        <TextView
            android:id="@+id/order_item_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/order_item_iv_thumbnail"
            android:ellipsize="end"
            android:lineSpacingExtra="22px"
            android:maxLines="2"
            android:textColor="@color/text_gray3"
            android:textSize="28px" />

        <TextView
            android:id="@+id/order_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/order_item_iv_thumbnail"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/order_item_iv_thumbnail"
            android:textColor="@color/text_color_1"
            android:textSize="32px" />

        <TextView
            android:id="@+id/order_item_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/order_item_iv_thumbnail"
            android:layout_alignParentRight="true"
            android:text="x1"
            android:textColor="@color/text_gray6"
            android:textSize="24px" />

    </com.bis.android.plug.autolayout.AutoRelativeLayout>

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@android:color/white"
        android:padding="20px">

        <TextView
            android:id="@+id/order_item_tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px_5"
            android:textColor="@color/text_gray6"
            android:textSize="24px" />

        <TextView
            android:id="@+id/order_item_tv_payAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/order_item_tv_freight"
            android:textColor="@color/text_gray6"
            android:textSize="28px" />

    </com.bis.android.plug.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_lighter_f2" />

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:id="@+id/order_item_layout_btn"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@android:color/white"
        android:paddingRight="20px"
        android:visibility="gone">

        <Button
            android:id="@+id/order_item_btn_commit"
            android:layout_width="150px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_centerVertical="true"
            android:background="@drawable/order_item_btn_bg"
            android:textColor="@color/text_tiffany"
            android:textSize="28px"
            android:visibility="gone"/>

        <Button
            android:id="@+id/order_item_btn_cancel"
            android:layout_width="150px"
            android:layout_height="60px"
            android:layout_toLeftOf="@id/order_item_btn_commit"
            android:layout_centerVertical="true"
            android:text="@string/order_detail_btn_cancel"
            android:background="@drawable/order_item_btn_bg"
            android:textColor="@color/text_tiffany"
            android:textSize="28px"
            android:visibility="gone"/>

        <Button
            android:id="@+id/order_item_btn_delete"
            android:layout_width="150px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:text="@string/delete"
            android:background="@drawable/order_item_btn_bg"
            android:textColor="@color/text_tiffany"
            android:layout_alignParentRight="true"
            android:textSize="28px"
            android:visibility="gone"/>

    </com.bis.android.plug.autolayout.AutoRelativeLayout>

</com.bis.android.plug.autolayout.AutoLinearLayout>