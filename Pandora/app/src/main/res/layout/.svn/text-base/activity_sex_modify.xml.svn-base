<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sex_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_lighter_f2"
        android:orientation="vertical">

    <include
        layout="@layout/head_include"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px_20"
        android:background="@color/bg_img_gray"/>
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/man_linear"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_gray3"
            android:textSize="30px"
            android:text="@string/man"/>
        <ImageView
            android:id="@+id/man_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/order_type_selected"
            android:visibility="visible"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/bg_img_gray"/>
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/woman_linear"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_gray3"
            android:textSize="30px"
            android:text="@string/women"/>
        <ImageView
            android:id="@+id/woman_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
           android:background="@drawable/order_type_selected"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_img_gray"/>

  </com.bis.android.plug.autolayout.AutoLinearLayout>

