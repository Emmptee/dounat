<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/px_10"
    android:paddingRight="@dimen/px_10"
    android:paddingBottom="@dimen/px_10"
    android:orientation="vertical">
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_10"
        android:background="@drawable/bg_shang"
        android:orientation="vertical">

        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/my_challenge_item_img"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="388px"/>
            <TextView
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/px_15"
                android:paddingRight="@dimen/px_15"
                android:paddingTop="@dimen/px_10"
                android:paddingBottom="@dimen/px_10"
                android:layout_margin="@dimen/px_20"
                android:textColor="@color/white"
                android:textSize="@dimen/text_third_font_size"
                android:background="@drawable/shape_half_rec_main"
                android:text="@string/delete"/>
        </com.bis.android.plug.autolayout.AutoRelativeLayout>
        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/my_challenge_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_gray3"
                android:textSize="@dimen/px_30"
                android:text="我是标题"/>
            <TextView
                android:id="@+id/my_challenge_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/text_gray9"
                android:text="1分钟前"/>
        </com.bis.android.plug.autolayout.AutoLinearLayout>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:paddingRight="@dimen/px_10"
            android:paddingLeft="@dimen/px_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray6"
                android:textSize="24px"
                android:text="参与专题："/>

            <TextView
                android:id="@+id/my_challenge_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray6"
                android:textSize="24px"/>
        </com.bis.android.plug.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/my_challenge_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:lineSpacingExtra="@dimen/px_5"
            android:textColor="@color/text_gray9"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/px_20"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:maxLines="3"/>

    </com.bis.android.plug.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_zhong"/>
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_xia"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/px_5"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/play_gray"
                android:textSize="22px"
                android:drawablePadding="@dimen/px_5"
                android:textColor="@color/text_gray9"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:layout_marginTop="@dimen/px_10"
                android:textColor="@color/text_gray9"
                android:text="@string/play"/>
        </com.bis.android.plug.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="70px"
            android:layout_marginTop="@dimen/px_10"
            android:background="@color/bg_img_gray"
            android:layout_gravity="center_vertical"/>
        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/px_5"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/favor_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/vote_gray"
                android:textSize="22px"
                android:textColor="@color/text_gray9"
                android:drawablePadding="@dimen/px_5"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/text_gray9"
                android:layout_marginTop="@dimen/px_10"
                android:text="@string/vote"/>
        </com.bis.android.plug.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="70px"
            android:layout_marginTop="@dimen/px_10"
            android:background="@color/bg_img_gray"
            android:layout_gravity="center_vertical"/>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/px_5"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reward_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/reward_gray"
                android:textSize="22px"
                android:textColor="@color/text_gray9"
                android:drawablePadding="@dimen/px_5"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/text_gray9"
                android:layout_marginTop="@dimen/px_10"
                android:text="@string/reward"/>
        </com.bis.android.plug.autolayout.AutoLinearLayout>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

</com.bis.android.plug.autolayout.AutoLinearLayout>