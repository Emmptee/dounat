<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.bis.android.plug.autolayout.widget.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        app:cardCornerRadius="5dp"
        app:elevation="10dp">

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="10px">

            <ImageView
                android:id="@+id/ip_item_playbill"
                android:layout_width="match_parent"
                android:layout_height="388px"
                android:scaleType="centerCrop"/>

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:id="@+id/ip_item_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.bis.android.plug.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.bis.android.plug.autolayout.AutoRelativeLayout
                    android:id="@+id/ip_item_head_linear"
                    android:layout_width="47px"
                    android:layout_height="47px">

                    <ImageView
                        android:id="@+id/ip_item_head"
                        android:layout_width="46px"
                        android:layout_height="46px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_header"/>
                    <ImageView
                        android:id="@+id/ip_item_head_vip"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        android:background="@drawable/icon_vip" />
                </com.bis.android.plug.autolayout.AutoRelativeLayout>
                <TextView
                        android:id="@+id/ip_item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="eeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
                        android:layout_marginLeft="10px"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/text_gray3"
                        android:textSize="30px"/>

                    <TextView
                        android:id="@+id/ip_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="2015-5"
                        android:textColor="@color/text_gray9"
                        android:textSize="24px"/>

                </com.bis.android.plug.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/ip_item_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </com.bis.android.plug.autolayout.AutoLinearLayout>

        </com.bis.android.plug.autolayout.AutoLinearLayout>
    </com.bis.android.plug.autolayout.widget.AutoCardView>
</com.bis.android.plug.autolayout.AutoLinearLayout>
