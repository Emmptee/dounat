<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.bis.android.plug.autolayout.AutoFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/upload_item_iv_thumbnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/px_20"
            android:background="@color/bg_img_gray"
            android:scaleType="centerCrop" />

    <com.bis.android.plug.autolayout.AutoFrameLayout
        android:id="@+id/upload_item_layout_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/px_20"
            android:background="#80000000"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/upload_item_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px_20"
            android:text="处理中..."/>

    </com.bis.android.plug.autolayout.AutoFrameLayout>


    </com.bis.android.plug.autolayout.AutoFrameLayout>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px_130"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_20">

        <TextView
            android:id="@+id/upload_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_8"
            android:text="发起挑战/专题名称"
            android:textColor="@color/text_gray3"
            android:textSize="28px" />

        <TextView
            android:id="@+id/upload_item_tv_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_8"
            android:text="225K/1.11M"
            android:textColor="@color/text_gray9"
            android:textSize="24px" />


        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/upload_item_pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="475px"
                android:layout_height="6px"
                android:max="100"
                android:progressDrawable="@drawable/progressbar_bg2" />

            <TextView
                android:id="@+id/upload_item_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_15"
                android:text="0%"
                android:textColor="@color/text_tiffany"
                android:textSize="24px" />
        </com.bis.android.plug.autolayout.AutoLinearLayout>

    </com.bis.android.plug.autolayout.AutoLinearLayout>

</com.bis.android.plug.autolayout.AutoLinearLayout>