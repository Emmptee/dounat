<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="@dimen/px_15"
       android:background="@color/gray_lighter_f2"/>
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chosen_item_subject_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_gray3"
            android:text="范冰冰冰桶挑战"/>
        <TextView
            android:id="@+id/chosen_item_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/star_chosen_cancle"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray2"/>
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chosen_item_img"
            android:layout_width="match_parent"
            android:layout_height="328px"
            android:scaleType="centerCrop"
            android:background="@drawable/default_bg"/>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="horizontal">

            <com.bis.android.plug.autolayout.AutoRelativeLayout
                android:layout_width="47px"
                android:layout_height="47px">
                <ImageView
                    android:id="@+id/chosen_item_head"
                    android:layout_width="46px"
                    android:layout_height="46px"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_header" />
                <ImageView
                    android:id="@+id/chosen_item_head_v"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:background="@drawable/icon_vip" />
            </com.bis.android.plug.autolayout.AutoRelativeLayout>


            <TextView
                android:id="@+id/chosen_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="范冰冰|冰桶挑战"
                android:textSize="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:textColor="@color/text_gray3"/>

            <TextView
                android:id="@+id/chosen_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10px"
                android:text="2016-06-25"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray9"/>

        </com.bis.android.plug.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/chosen_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:ellipsize="end"
            android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
            android:maxLines="3"  />


    </com.bis.android.plug.autolayout.AutoLinearLayout>
</com.bis.android.plug.autolayout.AutoLinearLayout>