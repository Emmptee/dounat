<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/bg_color_tiffany">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/channel"
            android:textColor="@android:color/white"
            android:textSize="36px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/subject_search_icon"
            android:visibility="gone"/>
    </com.bis.android.plug.autolayout.AutoRelativeLayout>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/channel_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_30"
            android:src="@drawable/channel_recommend_iv"/>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/px_45"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20">

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:id="@+id/channel_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/channel_one_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/channel_one_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:textColor="@color/text_gray6"
                    android:textSize="24px"/>
            </com.bis.android.plug.autolayout.AutoLinearLayout>

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:id="@+id/channel_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/channel_two_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/channel_two_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:textColor="@color/text_gray6"
                    android:textSize="24px"/>
            </com.bis.android.plug.autolayout.AutoLinearLayout>

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:id="@+id/channel_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/channel_three_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/channel_three_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:textColor="@color/text_gray6"
                    android:textSize="24px"/>
            </com.bis.android.plug.autolayout.AutoLinearLayout>
        </com.bis.android.plug.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_30"
            android:src="@drawable/channel_sort_iv"/>

        <com.donut.app.customview.CircleMenuLayout
            android:id="@+id/id_menulayout"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/channel_all_bg">

            <TextView
                android:id="@id/id_circle_menu_item_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/channel_more_bg"
                android:gravity="center"
                android:text="更多精彩"
                android:textColor="@color/text_tiffany"
                android:textSize="12sp"/>

        </com.donut.app.customview.CircleMenuLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_35"/>

    </com.bis.android.plug.autolayout.AutoLinearLayout>

</com.bis.android.plug.autolayout.AutoLinearLayout>