<com.bis.android.plug.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subject_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/subject_item_playbill"
        android:layout_width="match_parent"
        android:layout_height="620px"
        android:scaleType="centerCrop"
        android:src="@color/bg_color_tiffany"/>

    <TextView
        android:id="@+id/subject_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/subject_item_playbill"
        android:background="@drawable/home_item_foreground"
        android:ellipsize="end"
        android:gravity="bottom"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:minLines="2"
        android:padding="@dimen/px_25"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_third_font_size"/>

    <TextView
        android:id="@+id/subject_item_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject_item_playbill"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_25"
        android:textColor="@color/text_grayB"
        android:textSize="@dimen/text_third_font_size"/>

    <TextView
        android:id="@+id/subject_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject_item_playbill"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_70"
        android:textColor="@color/text_gray3"
        android:textSize="16sp"/>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/subject_item_period_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/subject_item_playbill"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_110"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/subject_item_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textColor="@color/text_grayB"
            android:textSize="@dimen/px_50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="/æœŸ"
            android:textColor="@color/text_grayB"
            android:textSize="24px"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

</com.bis.android.plug.autolayout.AutoRelativeLayout>
