<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_include"/>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88">

        <TextView
            android:id="@+id/collect_tv_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="专题"
            android:textColor="@drawable/challenger_text_selector"/>

        <TextView
            android:id="@+id/collect_tv_challenge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="挑战"
            android:textColor="@drawable/challenger_text_selector"/>

        <TextView
            android:id="@+id/collect_tv_ip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="心愿"
            android:textColor="@drawable/challenger_text_selector"/>

    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_gray9"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/collect_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/px_10">

    </android.support.v4.view.ViewPager>

</com.bis.android.plug.autolayout.AutoLinearLayout>
