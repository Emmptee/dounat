<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/px_20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notice_content_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="@color/text_gray3"
            android:text="系统通知"
            android:lineSpacingExtra="3dp"/>
        <TextView
            android:id="@+id/notice_date_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="right"
            android:textColor="@color/text_gray9"
            android:text="2015-01-20"
            android:lineSpacingExtra="3dp"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_10"
        android:background="@color/gray_lighter_f2"/>


</com.bis.android.plug.autolayout.AutoLinearLayout>