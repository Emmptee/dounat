<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="520px"
            android:background="@drawable/register_bg">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_40"
                android:src="@drawable/icon_round_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="用户登录"
                android:textColor="@color/white"
                android:textSize="34px" />
        </com.bis.android.plug.autolayout.AutoRelativeLayout>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/px_50"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_80"
            android:paddingRight="@dimen/px_80">


            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:id="@+id/account_linear"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_phone" />

                <EditText
                    android:id="@+id/login_account_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/telephone_star_input_tip"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_gray3"
                    android:textColorHint="@color/text_gray9"
                    android:textSize="28px" />
            </com.bis.android.plug.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_img_gray" />

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:id="@+id/pwd_linear"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_pwd" />

                <EditText
                    android:id="@+id/login_pwd_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入密码"
                    android:inputType="textPassword"
                    android:textColor="@color/text_gray3"
                    android:textColorHint="@color/text_gray9"
                    android:textSize="28px" />

                <LinearLayout
                    android:id="@+id/see_pwd_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/px_20">

                    <TextView
                        android:id="@+id/see_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/icon_close" />
                </LinearLayout>

            </com.bis.android.plug.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_img_gray" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="@dimen/px_50"
                android:background="@drawable/shape_round_half_rec_main_light"
                android:clickable="false"
                android:text="@string/login"
                android:textColor="@android:color/white"
                android:textSize="32px" />

            <com.bis.android.plug.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">

                <TextView
                    android:id="@+id/login_to_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册账号"
                    android:textColor="@color/text_tiffany"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/login_to_forget_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="忘记密码"
                    android:textColor="@color/text_tiffany"
                    android:textSize="24px" />
            </com.bis.android.plug.autolayout.AutoRelativeLayout>

            <com.bis.android.plug.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_50">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="center"
                    android:background="@color/gray_lighter_f2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:paddingLeft="@dimen/px_20"
                    android:paddingRight="@dimen/px_20"
                    android:text="第三方登录"
                    android:textColor="@color/text_gray9"
                    android:textSize="24px" />

            </com.bis.android.plug.autolayout.AutoFrameLayout>

            <com.bis.android.plug.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_40"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20">

                <TextView
                    android:id="@+id/login_third_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/weixin"
                    android:text="微信"
                    android:gravity="center"
                    android:textColor="@color/text_gray6"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/login_third_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/weibo"
                    android:text="微博"
                    android:textColor="@color/text_gray6"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/login_third_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/qq"
                    android:text="QQ"
                    android:gravity="center"
                    android:textColor="@color/text_gray6"
                    android:textSize="24px" />

            </com.bis.android.plug.autolayout.AutoRelativeLayout>

        </com.bis.android.plug.autolayout.AutoLinearLayout>
    </com.bis.android.plug.autolayout.AutoLinearLayout>
</ScrollView>