<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px_20">

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/collect_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_collect"
            android:drawablePadding="@dimen/px_5"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22px"/>

        <TextView
            android:id="@+id/collect_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/collect"
            android:textColor="@color/text_gray6"
            android:textSize="24px"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/parise_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_parise"
            android:drawablePadding="@dimen/px_5"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22px"
            />

        <TextView
            android:id="@+id/parise_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/favor"
            android:textColor="@color/text_gray6"
            android:textSize="24px"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <com.bis.android.plug.autolayout.AutoFrameLayout
        android:id="@+id/chellange_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chellange_icon"
            android:layout_width="@dimen/px_85"
            android:layout_height="@dimen/px_85"
            android:layout_marginTop="@dimen/px_5"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_challenge_anim"/>

        <TextView
            android:id="@+id/chellange_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="@dimen/px_5"
            android:gravity="center"
            android:textColor="@color/gold"
            android:textSize="22px"
            />

        <TextView
            android:id="@+id/chellange_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center"
            android:text="@string/challenge"
            android:textColor="@color/text_gray6"
            android:textSize="24px"/>
    </com.bis.android.plug.autolayout.AutoFrameLayout>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/reward_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reward_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_reward"
            android:drawablePadding="@dimen/px_5"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/reward"
            android:textColor="@color/text_gray6"
            android:textSize="24px"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>


    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:id="@+id/share_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/icon_share"
            android:drawablePadding="@dimen/px_5"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/share"
            android:textColor="@color/text_gray6"
            android:textSize="24px"/>
    </com.bis.android.plug.autolayout.AutoLinearLayout>


</com.bis.android.plug.autolayout.AutoLinearLayout>