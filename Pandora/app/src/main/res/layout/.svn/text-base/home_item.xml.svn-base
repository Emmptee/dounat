<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="740px"
        android:layout_height="1100px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_background"
        >
        <ImageView
            android:id="@+id/home_item_img"
            android:layout_width="700px"
            android:layout_height="700px"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22px"
            />
        <TextView
            android:id="@+id/home_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:textColor="#CCCCCC"
            android:layout_below="@id/home_item_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            />
        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="90px"
            android:orientation="horizontal"
            android:layout_below="@id/home_item_img"
            >
        <TextView
            android:id="@+id/home_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36px"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/home_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36px"
            android:textColor="@color/black"
            />
        </com.bis.android.plug.autolayout.AutoLinearLayout>
        <ImageView
            android:id="@+id/item_guide"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/home_item_fx"
            android:layout_marginBottom="15px"
            />
        <TextView
            android:id="@+id/home_item_lookcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="22px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="30px"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:id="@+id/home_item_fx"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/home_fx"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </com.bis.android.plug.autolayout.AutoRelativeLayout>

</com.bis.android.plug.autolayout.AutoRelativeLayout>
