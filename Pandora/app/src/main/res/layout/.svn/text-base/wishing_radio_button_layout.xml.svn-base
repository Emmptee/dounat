<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="63dp"
              android:background="@drawable/wishing_radio_button_bg_selector"
              android:orientation="vertical">

    <TextView
        android:id="@+id/wishing_radio_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@drawable/wishing_radio_button_title_selector"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/wishing_radio_button_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="@drawable/wishing_radio_button_content_selector"
        android:textSize="12sp"/>
</LinearLayout>