<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >

   <ImageView
       android:id="@+id/left_x"
       android:layout_width="100px"
       android:layout_height="100px"
       android:src="@drawable/left_x"
       android:layout_alignParentRight="true"
       android:layout_marginTop="50px"
       android:scaleType="centerInside"
       />
    <TextView
        android:id="@+id/btn_title"
        android:layout_width="170px"
        android:layout_height="56px"
        android:background="@drawable/left_btn"
        android:textSize="36px"
        android:text="频道列表"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126px"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/left_line"
        android:layout_marginTop="34px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="32px"
        android:layout_below="@id/btn_title"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:layout_marginBottom="92px"
        android:layout_marginTop="10px"
        >
    </android.support.v7.widget.RecyclerView>
</com.bis.android.plug.autolayout.AutoRelativeLayout>
