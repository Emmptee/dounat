<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
   <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:paddingLeft="13px"
        android:paddingRight="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:id="@+id/attention_item_header_bg"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80"
            android:background="@drawable/icon_star_bg">
            <ImageView
                android:id="@+id/attention_item_header"
                android:layout_width="@dimen/px_65"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/px_65"/>
            <ImageView
                android:id="@+id/attention_item_header_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_vip"/>
        </com.bis.android.plug.autolayout.AutoRelativeLayout>
        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="13px"
            android:layout_weight="1">
            <TextView
                android:id="@+id/attention_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="@color/gold"
                android:text="爱豆"/>
            <TextView
                android:id="@+id/attention_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/text_gray6"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="24px"
                android:text="爱豆啊啊啊啊啊嗄嗄锕"/>
        </com.bis.android.plug.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="1px"
            android:layout_height="@dimen/px_70"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/line_gray2"/>
        <TextView
            android:id="@+id/attention_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray6"
            android:drawableTop="@drawable/icon_attention"
            android:drawablePadding="@dimen/px_10"
            android:textSize="20px"
            android:text="已关注"/>

    </com.bis.android.plug.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray2"/>

</com.bis.android.plug.autolayout.AutoLinearLayout>