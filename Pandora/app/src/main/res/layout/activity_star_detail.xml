<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.donut.app.activity.StarDetailActivity">

    <include layout="@layout/head_include" />

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="468px"
        android:background="@drawable/star_top_bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="468px"
            android:background="#80ffffff" />

        <ImageView
            android:id="@+id/star_detail_iv_head_bg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_60"
            android:paddingLeft="@dimen/px_10"
            android:scaleType="center"
            android:src="@drawable/star_head_bg" />

        <ImageView
            android:id="@+id/star_detail_iv_head"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_alignLeft="@id/star_detail_iv_head_bg"
            android:layout_alignTop="@id/star_detail_iv_head_bg"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/star_detail_iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/star_detail_iv_head_bg"
            android:layout_alignBottom="@id/star_detail_iv_head_bg"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@drawable/icon_vip"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/star_detail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/star_detail_iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_20"
            android:textColor="@color/text_gray3"
            android:textSize="@dimen/text_first_font_size" />

        <TextView
            android:id="@+id/star_detail_tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/star_detail_tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_20"
            android:textColor="@color/text_gray3"
            android:textSize="@dimen/text_second_font_size" />

        <TextView
            android:id="@+id/star_detail_tv_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/star_detail_tv_fans"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_25"
            android:textColor="@color/text_gray3"
            android:textSize="@dimen/text_fourth_font_size" />

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/star_detail_tv_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/star_btn_selector"
                android:gravity="center"
                android:text="主页"
                android:textColor="@drawable/star_text_selector" />

            <TextView
                android:id="@+id/star_detail_tv_moments"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/star_btn_selector"
                android:gravity="center"
                android:text="动态"
                android:textColor="@drawable/star_text_selector" />

        </com.bis.android.plug.autolayout.AutoLinearLayout>

        <CheckBox
            android:id="@+id/star_detail_cb_concerned"
            android:layout_width="100px"
            android:layout_height="44px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_70"
            android:background="@drawable/shape_half_rec_tiffany"
            android:button="@null"
            android:gravity="center"
            android:text="+关注"
            android:textColor="@color/text_tiffany"
            android:textSize="@dimen/text_fourth_font_size" />

    </com.bis.android.plug.autolayout.AutoRelativeLayout>

    <com.bis.android.plug.autolayout.AutoFrameLayout
        android:id="@+id/star_detail_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_gray">

    </com.bis.android.plug.autolayout.AutoFrameLayout>

</com.bis.android.plug.autolayout.AutoLinearLayout>
