<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        >
    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="339px"
        android:layout_height="490px"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        >
         <ImageView
             android:id="@+id/my_img"
             android:layout_width="match_parent"
             android:layout_height="340px"
             android:src="@drawable/icon_logo"
             android:scaleType="centerCrop"
             />

        <TextView
            android:id="@+id/my_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/my_img"
            android:layout_marginTop="10px"
            android:text=""
            android:textColor="#CCCCCC"
            android:textSize="22px" />
        <TextView
            android:id="@+id/my_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#致我们单纯的小美好"
            android:layout_below="@id/my_title"
            android:textSize="30px"
            android:lines="1"
            android:textColor="@color/black"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            />
        <TextView
            android:id="@+id/my_playcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放次数"
            android:textColor="#CCCCCC"
            android:textSize="22px"
            android:layout_below="@id/my_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/my_content"
            android:layout_marginTop="10px"
            />
    </com.bis.android.plug.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/my_activity_no_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_280"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/no_msg_icon"
            android:text="@string/challenge_no_msg"
            android:textColor="@color/text_gray9"
            android:visibility="gone"
            android:textSize="@dimen/text_second_font_size" />
    </com.bis.android.plug.autolayout.AutoRelativeLayout>
</com.bis.android.plug.autolayout.AutoRelativeLayout>
