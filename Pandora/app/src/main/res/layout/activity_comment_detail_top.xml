<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="13px"
        android:paddingTop="13px">

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.bis.android.plug.autolayout.AutoRelativeLayout
                android:id="@+id/comment_detail_header_bg"
                android:layout_width="@dimen/px_80"
                android:layout_height="@dimen/px_80"
                android:background="@drawable/icon_head_bg">

                <ImageView
                    android:id="@+id/comment_detail_header"
                    android:layout_width="@dimen/px_65"
                    android:layout_height="@dimen/px_65"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/comment_detail_header_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_vip"
                    android:visibility="gone"/>
            </com.bis.android.plug.autolayout.AutoRelativeLayout>
        </com.bis.android.plug.autolayout.AutoLinearLayout>

        <com.bis.android.plug.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13px"
            android:orientation="vertical">

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comment_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray6"
                    android:textSize="@dimen/text_second_font_size"/>

                <TextView
                    android:id="@+id/comment_detail_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_40"
                    android:drawableLeft="@drawable/icon_money"
                    android:drawablePadding="@dimen/px_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/text_third_font_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/comment_detail_creattime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/px_20"
                    android:textColor="@color/gray_lighter_b"
                    android:textSize="@dimen/px_20"
                    />
            </com.bis.android.plug.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/comment_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:lineSpacingExtra="@dimen/px_5"
                android:paddingRight="@dimen/px_20"
                android:maxLines="5"
                android:ellipsize="end"
                android:textColor="@color/text_gray3"
                android:textSize="@dimen/text_first_font_size"/>

            <com.bis.android.plug.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_5"
                android:layout_marginTop="@dimen/px_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/px_20">

                <TextView
                    android:id="@+id/comment_detail_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray_lighter_b"
                    android:textSize="@dimen/px_20"
                    />

                <TextView
                    android:id="@+id/comment_detail_favor_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/px_15"
                    android:drawableRight="@drawable/icon_comment_favor_gray"
                    android:paddingLeft="@dimen/px_20"
                    android:paddingRight="@dimen/px_20"
                    android:paddingTop="@dimen/px_10"
                    android:paddingBottom="@dimen/px_10"
                    android:textColor="@color/text_gray6"
                    android:textSize="@dimen/text_fourth_font_size"/>

                <TextView
                    android:id="@+id/comment_detail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:drawablePadding="@dimen/px_15"
                    android:drawableRight="@drawable/icon_comment_gray"
                    android:paddingLeft="@dimen/px_20"
                    android:paddingTop="@dimen/px_10"
                    android:paddingBottom="@dimen/px_10"
                    android:textColor="@color/text_gray6"
                    android:textSize="@dimen/text_fourth_font_size"/>

            </com.bis.android.plug.autolayout.AutoLinearLayout>
        </com.bis.android.plug.autolayout.AutoLinearLayout>

    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px_10"
        android:background="@color/line_gray2"/>

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:orientation="horizontal">

        <com.bis.android.plug.autolayout.AutoFrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tab_parise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@drawable/tab_comment_text_selector"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:background="@color/line_gray2"/>

            <TextView
                android:id="@+id/parise_tri"
                android:layout_width="wrap_content"
                android:layout_height="16px"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/icon_triangle"/>

        </com.bis.android.plug.autolayout.AutoFrameLayout>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:background="@color/line_gray2"/>

        <com.bis.android.plug.autolayout.AutoFrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tab_reply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@drawable/tab_comment_text_selector"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:background="@color/line_gray2"/>

            <TextView
                android:id="@+id/reply_tri"
                android:layout_width="wrap_content"
                android:layout_height="16px"
                android:layout_gravity="center_horizontal|bottom"
                android:visibility="gone"
                android:background="@drawable/icon_triangle"/>
        </com.bis.android.plug.autolayout.AutoFrameLayout>
    </com.bis.android.plug.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_200"
        android:drawableTop="@drawable/icon_cry"
        android:drawablePadding="@dimen/px_20"
        android:textColor="@color/text_gray9"
        android:textSize="@dimen/text_second_font_size"
        android:visibility="visible"/>

</com.bis.android.plug.autolayout.AutoLinearLayout>

