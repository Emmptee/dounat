<?xml version="1.0" encoding="utf-8"?>
<com.bis.android.plug.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.donut.app.activity.CashPresentActivity">

    <include layout="@layout/head_include" />

    <com.bis.android.plug.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160">

        <TextView
            android:id="@+id/reward_income_tv_could"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_40"
            android:textColor="#ffb335"
            android:textSize="@dimen/px_50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reward_income_tv_could"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_8"
            android:text="账户余额(麦圈)"
            android:textColor="@color/text_gray3"
            android:textSize="@dimen/text_fourth_font_size" />

        <TextView
            android:id="@+id/reward_income_tv_present"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/shape_btn_main"
            android:gravity="center"
            android:text="提现"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_fourth_font_size" />

    </com.bis.android.plug.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_lighter_f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160">

        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reward_income_tv_allAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_40"
                android:textColor="#81d8d0"
                android:textSize="@dimen/px_40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reward_income_tv_allAmount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_10"
                android:text="总收入(麦圈)"
                android:textColor="@color/text_gray3"
                android:textSize="@dimen/text_fourth_font_size" />
        </com.bis.android.plug.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_lighter_f2" />

        <com.bis.android.plug.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reward_income_tv_already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_40"
                android:textColor="#55c0e7"
                android:textSize="@dimen/px_40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reward_income_tv_already"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_10"
                android:text="已提现(麦圈)"
                android:textColor="@color/text_gray3"
                android:textSize="@dimen/text_fourth_font_size" />
        </com.bis.android.plug.autolayout.AutoRelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="@color/gray_lighter_f2" />

    <com.bis.android.plug.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_20"
        android:paddingTop="@dimen/px_20">

        <TextView
            android:id="@+id/reward_income_tv_startTime"
            android:layout_width="@dimen/px_210"
            android:layout_height="@dimen/px_60"
            android:background="@drawable/shape_btn_gray"
            android:gravity="center"
            android:text="----/--/--"
            android:textColor="@color/text_gray3"
            android:textSize="@dimen/text_second_font_size" />

        <TextView
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_60"
            android:gravity="center"
            android:text="到"
            android:textColor="@color/text_gray3"
            android:textSize="@dimen/text_second_font_size" />

        <TextView
            android:id="@+id/reward_income_tv_endTime"
            android:layout_width="@dimen/px_210"
            android:layout_height="@dimen/px_60"
            android:background="@drawable/shape_btn_gray"
            android:gravity="center"
            android:text="----/--/--"
            android:textColor="@color/text_gray3"
            android:textSize="@dimen/text_second_font_size" />

        <TextView
            android:id="@+id/reward_income_tv_search"
            android:layout_width="@dimen/px_180"
            android:layout_height="@dimen/px_60"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@drawable/shape_btn_main"
            android:gravity="center"
            android:text="@string/search"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_second_font_size" />

    </com.bis.android.plug.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="@color/gray_lighter_f2" />

    <com.bis.android.plug.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/reward_income_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>


        <TextView
            android:id="@+id/reward_income_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_180"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/no_msg_icon"
            android:text="@string/reward_income_no_mag"
            android:visibility="gone"
            android:textColor="@color/text_gray9"
            android:textSize="@dimen/text_second_font_size" />

    </com.bis.android.plug.autolayout.AutoFrameLayout>

    <TextView
        android:id="@+id/reward_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:background="@color/bg_color_tiffany"
        android:gravity="center"
        android:text="@string/recharge"
        android:textColor="@android:color/white"
        android:textSize="32px" />

</com.bis.android.plug.autolayout.AutoLinearLayout>
